port <%= @port %>
pidfile <%= @pidfile %>
logfile <%= @logfile %>

<% @sentinelhosts.each do |hostname, host| -%>
sentinel monitor <%= hostname %> <%= host['monitor'] %>
sentinel down-after-milliseconds <%= hostname %> <%= host['downaftermilliseconds'] %>
sentinel failover-timeout <%= hostname %> <%= host['failovertimeout'] %>
sentinel parallel-syncs <%= hostname %> <%= host['parallelsyncs']  %>

<% end -%>
